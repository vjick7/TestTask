@model TestTask.Models.ViewModels.GameDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>CheckBoxModel</h4>
    <div class="form-group">
        Наименование - @Model.Game.Title
    </div>
    <div class="form-group">
        Студия - @Model.Game.Studio.Title
    </div>
    <div class="form-group">
        <div>Жанры:</div>
        <ul class="list-group">
            @foreach (var genre in Model.Genres)
            {
                    <li class="list-group-item">@genre</li>
            }
        </ul>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Game.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
